<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/definition_no_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:textColor="@color/light_green"
            android:paddingRight="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/definition_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:layout_toLeftOf="@+id/definition_sound_btn"
                    />

                <Button
                    android:id="@+id/definition_sound_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="@string/app_name"
                    android:background="@drawable/dictionarypopup_playbutton"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/synonym_title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="synonyms"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"
                    android:layout_toLeftOf="@+id/definition_sound_btn"
                    android:paddingRight="5dp"
                    android:textColor="@android:color/darker_gray"
                    />

                <TextView
                    android:id="@+id/synonym_texts_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:textColor="@android:color/darker_gray"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/spanish_translation_title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="spanish translation"
                    android:layout_centerVertical="true"
                    android:paddingRight="5dp"
                    android:layout_toLeftOf="@+id/definition_sound_btn"
                    android:textSize="18sp"
                    android:textColor="@android:color/darker_gray"
                    />

                <TextView
                    android:id="@+id/spanish_translation_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:textColor="@android:color/darker_gray"

                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/images_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>